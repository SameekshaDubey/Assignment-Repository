<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Joke Search</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Search for Jokes</h1>
        <form action="/search" method="post" class="mb-3">
            <input type="text" name="term" class="form-control" placeholder="Enter a keyword">
            <button type="submit" class="btn btn-primary mt-2">Search</button>
        </form>
        <div class="row">
            <% if (jokes) { %>
                <% jokes.forEach(joke => { %>
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <img src="<%= joke.imageUrl %>" class="card-img-top" alt="Joke Image">
                            <div class="card-body">
                                <p class="card-text"><%= joke.text %></p>
                                <form action="/favourite" method="post">
                                    <input type="hidden" name="joke" value="<%= joke.text %>">
                                    <input type="hidden" name="joke_image_url" value="<%= joke.imageUrl %>">
                                    <button type="submit" class="btn btn-warning">Favourite</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</body>
</html>
